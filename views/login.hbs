{{#content "css" }}
    <link rel="stylesheet" href="/css/login.css"/>
{{/content}}
<div class="container">
<div class="row">
        <div class="login-box">
            <div class="login-top">
            <legend>
                <h2>账号登录</h2>
            </legend>
            </div>
            <form class="m-t-md" name="registerForm" method="post" action="">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="请输入账号" name="phone">
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" placeholder="请输入密码" name="password">
                </div>
                <div class="form-group">
                    <div class="text-right">
                        <a href="forgot.html" class="f-black">忘记密码？</a>
                        {{message}}
                    </div>
                </div>

                <button class="btn btn-pink btn-block btn-md" type="submit">登录</button>

                <div class="or">
                    <p class="f-black">我还没有账号，<a href="/register" class="f-blue">我要注册</a></p>

                    <p class="big-or">or</p>

                </div>
            </form>
            <div class="row items">
                <p class="big-san">第三方账号登录</p>

                <div class="col-xs-8">
                    <a class="item icon-weixin" href="">
                    </a>
                </div>
                <div class="col-xs-8">
                    <a class="item icon-weibo">
                    </a>
                </div>
                <div class="col-xs-8">
                    <a class="item icon-qq">
                    </a>
                </div>
            </div>
        </div>
</div>
</div>