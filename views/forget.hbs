{{#content "css" }}
    <link rel="stylesheet" href="/css/login.css"/>
{{/content}}
<div class="row">
    <div class="login-box">
        <div class="login-top">
            <legend>
                <h2>重置密码</h2>
            </legend>
        </div>
        <form class="m-t-md" method="post" action="" id="registerForm">
            <div class="form-group">
                <input type="text" class="form-control" placeholder="手机号" name="phone" value="{{user.phone}}">
            </div>
            <div class="form-group">
                <div class="col-xs-17 no-p">
                    <input class="form-control" type="text" name="mobileCode" id="mobileCode" value=""
                           placeholder="短信验证码">
                </div>
                <button class="btn btn-default btn-md m-l-xxs" type="button" name="" id="btn-code">点击获取</button>
            </div>
            <div class="form-group">
                <input type="password" class="form-control" placeholder="新密码 (6-16位)" name="password">
            </div>
            <button class="btn btn-pink btn-block btn-md" type="submit">确定</button>
        </form>
    </div>
</div>
{{> scripts entry = "forget"}}
